{
  "expo": {
    "name": "TrailZap",
    "slug": "trailzap-fitness-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "trailzap",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "TrailZap needs location access to track your fitness activities and routes.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "TrailZap needs location access to track your fitness activities and routes."
      }
    },
    "android": {
      "permissions": [
        "ACCESS_FINE_LOCATION", 
        "ACCESS_COARSE_LOCATION"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": ["expo-router", "expo-font", "expo-web-browser", "expo-location"],
    "experiments": {
      "typedRoutes": true
    }
  }
}